<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>


<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<VBox fx:id="mainContainer" prefWidth="1200.0" 
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
                       fx:controller="launcher.gui.GDKGameLobbyController"
      styleClass="game-picker-container" spacing="0" alignment="TOP_LEFT">
    
    <padding>
        <Insets top="0" right="0" bottom="0" left="0"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER" spacing="20" styleClass="header" VBox.vgrow="NEVER">
        <Button fx:id="exitButton" text="✕" styleClass="nav-button, icon-button"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="gameTitleLabel" text="OMG Game Development Kit" styleClass="main-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <HBox spacing="5" alignment="CENTER_RIGHT">
            <ProgressIndicator fx:id="refreshProgressIndicator" visible="false" prefWidth="20" prefHeight="20" styleClass="refresh-progress"/>
            <Button fx:id="refreshButton" text="↻" styleClass="nav-button, icon-button"/>
        </HBox>
    </HBox>
    
    <!-- Main Content Area -->
    <VBox spacing="0" VBox.vgrow="ALWAYS" alignment="TOP_CENTER">
        
        <!-- Game Selection and Launch Button - Right beneath top bar -->
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="game-selector-row" minWidth="800" prefWidth="1000"
              style="-fx-min-height: 65px; -fx-pref-height: 65px; -fx-max-height: 65px; -fx-min-width: 800px; -fx-pref-width: 1000px; -fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 10; -fx-border-color: #007bff; -fx-border-width: 1; -fx-border-radius: 10; -fx-padding: 10;">
            <Label text="Select Game:" style="-fx-text-fill: #212529; -fx-font-size: 16px; -fx-font-weight: bold; -fx-min-height: 45px; -fx-pref-height: 45px; -fx-max-height: 45px;"/>
            <ComboBox fx:id="gameSelector" promptText="Choose a game module" 
                     prefWidth="400" 
                     style="-fx-min-height: 45px; -fx-max-height: 45px; -fx-pref-height: 45px; -fx-background-color: #ffffff; -fx-text-fill: #212529; -fx-border-color: #ced4da; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 12; -fx-font-size: 12px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="launchGameButton" text="Launch Game" 
                    style="-fx-alignment: center; -fx-content-display: text-only; -fx-min-height: 45px; -fx-pref-height: 45px; -fx-max-height: 45px; -fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-border-color: transparent; -fx-cursor: hand; -fx-padding: 10 20; -fx-min-width: 120;"/>
        </HBox>
        
        <!-- JSON Input Area - Right below game selector row -->
        <HBox spacing="15" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" minHeight="400" prefHeight="450" minWidth="800" prefWidth="1000" styleClass="json-input-area"
              style="-fx-min-height: 400px; -fx-pref-height: 450px; -fx-min-width: 800px; -fx-pref-width: 1000px; -fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 10; -fx-border-color: #007bff; -fx-border-width: 1; -fx-border-radius: 10; -fx-padding: 15;">
            <!-- JSON Input Editor -->
            <VBox fx:id="jsonInputEditorContainer" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" minHeight="400" prefHeight="450"/>
            
            <!-- JSON Output Editor -->
            <VBox fx:id="jsonOutputEditorContainer" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" minHeight="400" prefHeight="450"/>
        </HBox>
        
        <!-- Control Buttons and Toggles - Below JSON input area -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="control-section" minWidth="800" prefWidth="1000"
              style="-fx-min-height: 80px; -fx-pref-height: 80px; -fx-max-height: 80px; -fx-min-width: 800px; -fx-pref-width: 1000px; -fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 10; -fx-border-color: #007bff; -fx-border-width: 1; -fx-border-radius: 10; -fx-padding: 10;">
            <!-- Control Buttons -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="clearInputButton" text="Clear Input" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 11px; -fx-font-weight: bold; -fx-background-radius: 3; -fx-border-color: transparent; -fx-cursor: hand; -fx-padding: 4 8; -fx-min-width: 60;"/>
                <Button fx:id="metadataRequestButton" text="Request Metadata" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 11px; -fx-font-weight: bold; -fx-background-radius: 3; -fx-border-color: transparent; -fx-cursor: hand; -fx-padding: 4 8; -fx-min-width: 60;"/>
                <Button fx:id="sendMessageButton" text="Send Message" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 11px; -fx-font-weight: bold; -fx-background-radius: 3; -fx-border-color: transparent; -fx-cursor: hand; -fx-padding: 4 8; -fx-min-width: 60;"/>
                <Button fx:id="clearOutputButton2" text="Clear Output" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 11px; -fx-font-weight: bold; -fx-background-radius: 3; -fx-border-color: transparent; -fx-cursor: hand; -fx-padding: 4 8; -fx-min-width: 60;"/>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Toggle Switches - Side by Side -->
            <HBox spacing="30" alignment="CENTER_LEFT" 
                  style="-fx-min-height: 40px; -fx-pref-height: 40px; -fx-max-height: 40px;">
                <!-- JSON Persistence Toggle -->
                <HBox alignment="CENTER_LEFT" spacing="2" style="-fx-min-height: 20; -fx-max-height: 20;">
                    <Label text="Save JSON" style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 12px;"/>
                    <JFXToggleButton fx:id="jsonPersistenceToggle" selected="true"/>
                </HBox>
                
                <!-- Auto-Launch Toggle -->
                <HBox alignment="CENTER_LEFT" spacing="2" style="-fx-min-height: 20; -fx-max-height: 20;">
                    <Label text="Auto-Launch Game" style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 12px;"/>
                    <JFXToggleButton fx:id="autoLaunchToggle" selected="false"/>
                </HBox>
                
                <!-- Auto-Select Game Toggle -->
                <HBox alignment="CENTER_LEFT" spacing="2" style="-fx-min-height: 20; -fx-max-height: 20;">
                    <Label text="Auto-Select Game" style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 12px;"/>
                    <JFXToggleButton fx:id="autoSelectGameToggle" selected="false"/>
                </HBox>
            </HBox>
        </HBox>
        
        <!-- Message Area - Fixed Height -->
        <VBox styleClass="message-panel" spacing="5" VBox.vgrow="NEVER" HBox.hgrow="ALWAYS" alignment="TOP_LEFT" minWidth="400" prefHeight="250">
            <Label text="Messages" styleClass="section-title"/>
            <ScrollPane fx:id="messageScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true" styleClass="message-scroll-pane" prefHeight="200">
                <VBox fx:id="messageContainer" spacing="5" styleClass="message-container"/>
            </ScrollPane>
        </VBox>
    </VBox>
    
    <!-- Status Bar -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="status-bar" VBox.vgrow="NEVER">
        <padding>
            <Insets top="10" right="15" bottom="10" left="15"/>
        </padding>
        <ProgressBar fx:id="loadingProgressBar" visible="false" prefWidth="250" styleClass="loading-progress"/>
        <Label fx:id="loadingStatusLabel" text="" visible="false" styleClass="loading-status-text"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="statusLabel" text="Available Games: 0" styleClass="status-text"/>
    </HBox>
    
</VBox> 
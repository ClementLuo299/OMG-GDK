<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>


<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import launcher.ProfessionalJsonEditor?>

<VBox fx:id="mainContainer" prefHeight="900.0" prefWidth="1200.0" 
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="GDKGameLobbyController"
      styleClass="game-picker-container" spacing="0" alignment="TOP_LEFT">
    
    <padding>
        <Insets top="0" right="0" bottom="0" left="0"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER" spacing="20" styleClass="header" VBox.vgrow="NEVER">
        <Button fx:id="exitButton" text="✕" styleClass="nav-button, icon-button"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="gameTitleLabel" text="OMG Game Development Kit" styleClass="main-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="refreshButton" text="↻" styleClass="nav-button, icon-button"/>
    </HBox>
    
    <!-- Main Content Area -->
    <VBox spacing="0" VBox.vgrow="ALWAYS" alignment="TOP_CENTER">
        
        <!-- Centered Game Configuration Panel -->
        <VBox styleClass="game-config-panel" spacing="15" alignment="TOP_CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" minWidth="500">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <!-- Game Selection and Launch Button -->
            <HBox alignment="CENTER_LEFT" spacing="20" VBox.vgrow="NEVER">
                <Label text="Select Game:" styleClass="field-label"/>
                <ComboBox fx:id="gameSelector" promptText="Choose a game module" 
                         styleClass="combo-box" prefWidth="400" 
                         style="-fx-min-height: 45; -fx-max-height: 45; -fx-pref-height: 45;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="launchGameButton" text="Launch Game" 
                        styleClass="primary-button" style="-fx-alignment: center; -fx-content-display: text-only;"/>
            </HBox>
            
            <!-- Professional JSON Editor -->
            <ProfessionalJsonEditor fx:id="jsonEditor" VBox.vgrow="ALWAYS"/>
            
            <!-- Control Buttons -->
            <HBox spacing="10" alignment="CENTER_LEFT" VBox.vgrow="NEVER" styleClass="button-grid">
                <Button fx:id="clearInputButton" text="Clear Input" styleClass="small-button"/>
                <Button fx:id="metadataRequestButton" text="Request Metadata" styleClass="small-button"/>
                <Button fx:id="sendMessageButton" text="Send Message" styleClass="small-button"/>
                <Button fx:id="clearOutputButton2" text="Clear Output" styleClass="small-button"/>
            </HBox>
            
            <!-- JSON Persistence Toggle -->
            <HBox alignment="CENTER_LEFT" spacing="2" VBox.vgrow="NEVER" style="-fx-min-height: 20; -fx-max-height: 20;">
                <Label text="Save JSON" style="-fx-font-weight: bold;" styleClass="toggle-label"/>
                <JFXToggleButton fx:id="jsonPersistenceToggle" selected="true" styleClass="jfoenix-toggle"/>
            </HBox>
        </VBox>
        
        <!-- Divider -->
        <HBox alignment="CENTER" VBox.vgrow="NEVER">
            <Region style="-fx-background-color: #dee2e6; -fx-min-height: 1; -fx-pref-width: 100%;"/>
        </HBox>
        
        <!-- Message Area -->
        <VBox styleClass="message-panel" spacing="5" VBox.vgrow="NEVER" HBox.hgrow="ALWAYS" alignment="TOP_LEFT" minWidth="400">
            <Label text="Messages" styleClass="section-title"/>
            <ScrollPane fx:id="messageScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true" styleClass="message-scroll-pane">
                <VBox fx:id="messageContainer" spacing="5" styleClass="message-container"/>
            </ScrollPane>
        </VBox>
    </VBox>
    
    <!-- Status Bar -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="status-bar" VBox.vgrow="NEVER">
        <padding>
            <Insets top="10" right="15" bottom="10" left="15"/>
        </padding>
        <Label text="GDK Game Lobby" styleClass="status-text"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="statusLabel" text="Available Games: 0" styleClass="status-text"/>
    </HBox>
    
</VBox> 
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>

<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<VBox fx:id="mainContainer" prefWidth="1200.0" 
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
                       fx:controller="launcher.gui.GDKGameLobbyController"
      styleClass="game-picker-container" spacing="0" alignment="TOP_LEFT">
    
    <padding>
        <Insets top="0" right="0" bottom="0" left="0"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER" spacing="20" styleClass="header" VBox.vgrow="NEVER">
        <Button fx:id="exitButton" text="✕" styleClass="nav-button, icon-button"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="gameTitleLabel" text="OMG Game Development Kit" styleClass="main-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <HBox spacing="5" alignment="CENTER_RIGHT">
            <ProgressIndicator fx:id="refreshProgressIndicator" visible="false" prefWidth="20" prefHeight="20" styleClass="refresh-progress"/>
            <Button fx:id="refreshButton" text="↻" styleClass="nav-button, icon-button"/>
            <Button fx:id="settingsButton" text="⚙" styleClass="nav-button, icon-button"/>
        </HBox>
    </HBox>
    
    <!-- Main Content Area -->
    <VBox spacing="0" VBox.vgrow="ALWAYS" alignment="TOP_CENTER" style="-fx-background-color: white; -fx-fill-height: true;">
        
        <!-- Game Selection and Launch Button - Right beneath top bar -->
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="game-selector-row" minWidth="600" prefWidth="1000" VBox.vgrow="NEVER"
              style="-fx-min-height: 65px; -fx-pref-height: 65px; -fx-max-height: 65px; -fx-min-width: 600px; -fx-pref-width: 1000px;">
            <Label text="Select Game:" style="-fx-text-fill: #212529; -fx-font-size: 16px; -fx-font-weight: bold; -fx-min-height: 45px; -fx-pref-height: 45px; -fx-max-height: 45px;"/>
            <ComboBox fx:id="gameSelector" promptText="Choose a game module" 
                     prefWidth="400" 
                     style="-fx-min-height: 45px; -fx-max-height: 45px; -fx-pref-height: 45px; -fx-background-color: #ffffff; -fx-text-fill: #212529; -fx-border-color: #ced4da; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 12; -fx-font-size: 12px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="launchGameButton" text="Launch Game" 
                    style="-fx-alignment: center; -fx-content-display: text-only; -fx-min-height: 45px; -fx-pref-height: 45px; -fx-max-height: 45px; -fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-border-color: transparent; -fx-cursor: hand; -fx-padding: 10 20; -fx-min-width: 120;"/>
        </HBox>
        
        <!-- JSON Areas Side by Side with Their Respective Controls -->
        <HBox spacing="15" HBox.hgrow="ALWAYS" VBox.vgrow="SOMETIMES" styleClass="json-input-area"
              style="-fx-min-height: 200px; -fx-pref-height: 33%; -fx-max-height: 400px;">
            
            <!-- JSON Input Area with Input Controls -->
            <VBox spacing="5" alignment="TOP_LEFT" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <Label text="JSON Input" styleClass="section-title" style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 14px;"/>
                <VBox fx:id="jsonInputEditorContainer" spacing="0" VBox.vgrow="ALWAYS" style="-fx-min-height: 0; -fx-pref-height: 0;"/>
                
                <!-- Input-specific control buttons and Save JSON toggle -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5 0 0 0; -fx-min-height: 35; -fx-pref-height: 35; -fx-max-height: 35;">
                    <Button fx:id="clearInputButton" text="Clear Input" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 11px; -fx-font-weight: bold; -fx-background-radius: 3; -fx-border-color: transparent; -fx-cursor: hand; -fx-padding: 2 6; -fx-min-width: 60; -fx-min-height: 25; -fx-pref-height: 25; -fx-max-height: 25;"/>
                    <Button fx:id="metadataRequestButton" text="Request Metadata" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 11px; -fx-font-weight: bold; -fx-background-radius: 3; -fx-border-color: transparent; -fx-cursor: hand; -fx-padding: 2 6; -fx-min-width: 60; -fx-min-height: 25; -fx-pref-height: 25; -fx-max-height: 25;"/>
                    <Button fx:id="sendMessageButton" text="Send Message" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 11px; -fx-font-weight: bold; -fx-background-radius: 3; -fx-border-color: transparent; -fx-cursor: hand; -fx-padding: 2 6; -fx-min-width: 60; -fx-min-height: 25; -fx-pref-height: 25; -fx-max-height: 25;"/>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <!-- JSON Persistence Toggle -->
                    <HBox alignment="CENTER_LEFT" spacing="2">
                        <Label text="Save JSON" style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 12px;"/>
                        <JFXToggleButton fx:id="jsonPersistenceToggle" selected="true"/>
                    </HBox>
                </HBox>
            </VBox>
            
            <!-- JSON Output Area with Output Controls -->
            <VBox spacing="5" alignment="TOP_LEFT" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <Label text="JSON Output" styleClass="section-title" style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 14px;"/>
                <VBox fx:id="jsonOutputEditorContainer" spacing="0" VBox.vgrow="ALWAYS" style="-fx-min-height: 0; -fx-pref-height: 0;"/>
                
                <!-- Output-specific control buttons -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5 0 0 0; -fx-min-height: 35; -fx-pref-height: 35; -fx-max-height: 35;">
                    <Button fx:id="clearOutputButton2" text="Clear Output" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 11px; -fx-font-weight: bold; -fx-background-radius: 3; -fx-border-color: transparent; -fx-cursor: hand; -fx-padding: 2 6; -fx-min-width: 60; -fx-min-height: 25; -fx-pref-height: 25; -fx-max-height: 25;"/>
                </HBox>
            </VBox>
        </HBox>
        
        <!-- Global Application Controls -->
        <HBox spacing="30" alignment="CENTER_LEFT" styleClass="control-section" VBox.vgrow="NEVER"
              style="-fx-min-height: 40px; -fx-pref-height: 40px; -fx-max-height: 40px; -fx-padding: 20 0 10 20;">
            <!-- Toggle Switches - Side by Side -->
            <HBox spacing="30" alignment="CENTER_LEFT">
                <!-- Auto-Launch Toggle -->
                <HBox alignment="CENTER_LEFT" spacing="2" style="-fx-min-height: 15; -fx-max-height: 15;">
                    <Label text="Auto-Launch Game" style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 12px;"/>
                    <JFXToggleButton fx:id="autoLaunchToggle" selected="false"/>
                </HBox>
                
                <!-- Auto-Select Game Toggle -->
                <HBox alignment="CENTER_LEFT" spacing="2" style="-fx-min-height: 15; -fx-max-height: 15;">
                    <Label text="Auto-Select Game" style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 12px;"/>
                    <JFXToggleButton fx:id="autoSelectGameToggle" selected="false"/>
                </HBox>
            </HBox>
        </HBox>
        
        <!-- Message Area - Allow growth but with minimum height -->
        <VBox styleClass="message-panel" spacing="0" VBox.vgrow="SOMETIMES" HBox.hgrow="ALWAYS" alignment="TOP_LEFT" minWidth="400" minHeight="200">
            <Label text="Messages" styleClass="section-title"/>
            <ScrollPane fx:id="messageScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true" styleClass="message-scroll-pane" minHeight="150">
                <VBox fx:id="messageContainer" spacing="0" styleClass="message-container"/>
            </ScrollPane>
        </VBox>
    </VBox>
    
    <!-- Status Bar -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="status-bar" VBox.vgrow="NEVER">
        <padding>
            <Insets top="10" right="15" bottom="10" left="15"/>
        </padding>
        <ProgressBar fx:id="loadingProgressBar" visible="false" prefWidth="250" styleClass="loading-progress"/>
        <Label fx:id="loadingStatusLabel" text="" visible="false" styleClass="loading-status-text"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="statusLabel" text="Available Games: 0" styleClass="status-text"/>
    </HBox>
    
</VBox> 
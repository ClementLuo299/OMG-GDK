<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="rootContainer" spacing="10" styleClass="server-simulator"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="launcher.gui.ServerSimulatorController">
    <children>
        <Label text="Server Simulator" styleClass="title-label" />

        <VBox spacing="5" styleClass="message-section">
            <Label text="Messages:" />
            <TextArea fx:id="receivedMessagesDisplayArea" prefRowCount="10" editable="false" wrapText="true" styleClass="message-area" />
        </VBox>

        <VBox spacing="5" styleClass="message-section">
            <Label text="Send Message (JSON or plain text):" />
            <HBox spacing="5">
                <TextField fx:id="messageInputField" promptText="Enter JSON or text..." HBox.hgrow="ALWAYS" />
                <Button fx:id="sendMessageButton" text="Send" />
            </HBox>
        </VBox>

        <HBox spacing="5" styleClass="button-section">
            <Button fx:id="clearMessagesButton" text="Clear Messages" />
            <Button fx:id="closeWindowButton" text="Close" />
        </HBox>
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
</VBox> 